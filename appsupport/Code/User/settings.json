{
    //
    // Built-in
    //
    // Workbench
    "workbench.colorTheme": "Tokyo Night",
    // Terminal
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorStyleInactive": "block",
    "terminal.explorerKind": "external",
    "terminal.integrated.defaultProfile.osx": "zsh",
    // Editor
    "editor.wordWrapColumn": 120,
    "editor.lineNumbers": "relative",
    "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace, FiraCode Nerd Font Mono",
    "editor.minimap.enabled": false,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.accessibilitySupport": "off",
    "editor.guides.bracketPairs": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.formatOnSave": true,
    "editor.rulers": [
        {
            "column": 80,
            "color": "#69296950"
        },
        {
            "column": 120,
            "color": "#692969"
        },
    ],
    // Diff
    "diffEditor.ignoreTrimWhitespace": true,
    "diffEditor.experimental.showMoves": true,
    "diffEditor.hideUnchangedRegions.enabled": true,
    // Files
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    // File-specific settings
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "yaml.format.proseWrap": "never",
    "yaml.format.printWidth": 120,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // Security
    "security.promptForLocalFileProtocolHandling": false,
    //
    // Extensions
    //
    // Git
    "git.autofetch": true,
    "git.confirmSync": true,
    // Github
    "githubPullRequests.createOnPublishBranch": "never",
    "githubPullRequests.pullBranch": "never",
    // ErrorLens
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "warning"
    ],
    // CodeSpell
    "cSpell.enabled": true,
    "cSpell.checkVSCodeSystemFiles": true,
    "cSpell.userWords": [
        "cocotb",
        "halfword",
        "inout",
        "jstabitunlikely",
        "pyuvm",
        "regbank",
        "seqr",
        "strb"
    ],
    // Rewrap
    "rewrap.autoWrap.enabled": true,
    "rewrap.wrappingColumn": 120,
    // Telemetry
    "redhat.telemetry.enabled": false,
    // Python
    "python.defaultInterpreterPath": "~/.pyenv/shims/python",
    "python.analysis.completeFunctionParens": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoFormatStrings": true,
    "python.analysis.generateWithTypeAnnotation": true,
    "python.analysis.inlayHints.callArgumentNames": "partial",
    "python.analysis.inlayHints.pytestParameters": true,
    // Autopep8
    "autopep8.args": [
        "--max-line-length=120"
    ],
    // MyPy
    "mypy-type-checker.reportingScope": "workspace",
    "mypy-type-checker.showNotifications": "onError",
    // Makefile
    "makefile.configureOnOpen": true,
    //
    // End-of-manually-ordered-config
}
